{
    "manifest_version": 2,

    "name": "Vaultage",
    "description": "The Vaultage password manager extension for Chrome",
    "version": "0.0.0",

    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },

    "permissions": [
        "clipboardWrite",
        "cookies",
        "http://*/",
        "https://*/"
    ],

    "background": {
        "scripts": ["vaultage-background.js"]
    }
}