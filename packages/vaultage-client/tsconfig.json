{
  "compilerOptions": {
    "outDir": "dist/js",
    "declaration": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "module": "commonjs",
    "target": "es5",
    "allowJs": false,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "lib": [
      "es2015"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*.ts",
    "vaultage.ts"
  ]
}