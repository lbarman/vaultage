{
    "name": "vaultage-client",
    "version": "0.0.0",
    "description": "SDK to write JavaScript clients for the Vaultage password manager",
    "main": "dist/vaultage.js",
    "types": "dist/src/vaultage.d.ts",
    "scripts": {
        "build": "webpack",
        "clean": "rimraf dist/",
        "lint": "tslint -p .",
        "test": "npm run lint && cross-env NODE_PATH=.. jest",
        "watch": "cross-env NODE_PATH=.. jest --watch"
    },
    "files": [
        "dist/src",
        "dist/vaultage.js",
        "dist/vaultage.d.ts",
        "lib"
    ],
    "contributors": [
        "Ludovic Barman <ludovic.barman@protonmail.com> (https://lbarman.ch/)",
        "Hadrien Milano <hadrien.milano@gmail.com> (https://hmil.fr)"
    ],
    "license": "GPL-2.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/vaultage-pm/vaultage"
    },
    "bugs": {
        "url": "https://github.com/vaultage-pm/vaultage/issues"
    },
    "homepage": "https://github.com/vaultage-pm/vaultage#readme",
    "dependencies": {
        "axios": "0.19.2",
        "jquery": "3.4.1",
        "openpgp": "^4.9.0",
        "tslib": "1.10.0"
    },
    "devDependencies": {
        "@types/jest": "25.1.2",
        "@types/jquery": "3.3.32",
        "@types/node": "13.7.0",
        "cross-env": "7.0.0",
        "jest": "25.1.0",
        "ts-jest": "25.2.0",
        "ts-loader": "6.2.1",
        "ts-node": "8.6.2",
        "tslint": "6.0.0",
        "typescript": "3.7.5",
        "webpack": "4.41.5",
        "webpack-cli": "3.3.10"
    },
    "jest": {
        "transform": {
            ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
        },
        "testRegex": "(/__tests__/.*|\\.(test|spec))\\.ts$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ],
        "coveragePathIgnorePatterns": [
            "/node_modules/",
            "/test/",
            "sjcl.js"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 50,
                "functions": 70,
                "lines": 70,
                "statements": 70
            }
        },
        "clearMocks": true,
        "collectCoverage": true
    }
}
