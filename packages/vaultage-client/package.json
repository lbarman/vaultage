{
    "name": "vaultage-client",
    "version": "0.0.0",
    "description": "SDK to write JavaScript clients for the Vaultage password manager",
    "main": "dist/vaultage.js",
    "types": "dist/src/vaultage.d.ts",
    "scripts": {
        "build": "npm run build:node && npm run build:sjcl",
        "build:node": "webpack --config webpack.config.node.js",
        "build:sjcl": "webpack --config webpack.config.sjcl.js",
        "clean": "rimraf dist/",
        "lint": "tslint -p .",
        "test": "npm run lint && cross-env NODE_PATH=.. jest",
        "watch": "cross-env NODE_PATH=.. jest --watch"
    },
    "files": [
        "dist/src",
        "dist/vaultage.js",
        "dist/vaultage.d.ts",
        "lib"
    ],
    "contributors": [
        "Ludovic Barman <ludovic.barman@protonmail.com> (https://lbarman.ch/)",
        "Hadrien Milano <hadrien.milano@gmail.com> (https://hmil.fr)"
    ],
    "license": "GPL-2.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/lbarman/vaultage"
    },
    "bugs": {
        "url": "https://github.com/lbarman/vaultage/issues"
    },
    "homepage": "https://github.com/lbarman/vaultage#readme",
    "dependencies": {
        "axios": "^0.18.0",
        "jquery": "^3.2.1",
        "tslib": "^1.8.1"
    },
    "devDependencies": {
        "@types/jest": "^22.1.2",
        "@types/jquery": "^3.2.15",
        "@types/node": "^10.0.9",
        "cross-env": "^5.1.1",
        "jest": "^22.4.3",
        "lodash": "^4.17.10",
        "ts-jest": "^22.4.6",
        "ts-loader": "4.3.0",
        "ts-node": "^6.0.3",
        "tslint": "^5.8.0",
        "typescript": "^2.7.2",
        "webpack": "4.8.3",
        "webpack-cli": "^2.1.3",
        "webpack-require-from": "^1.2.5"
    },
    "jest": {
        "transform": {
            ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
        },
        "testRegex": "(/__tests__/.*|\\.(test|spec))\\.ts$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ],
        "coveragePathIgnorePatterns": [
            "/node_modules/",
            "/test/",
            "sjcl.js"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 50,
                "functions": 70,
                "lines": 70,
                "statements": 70
            }
        },
        "clearMocks": true,
        "collectCoverage": true,
        "mapCoverage": true
    }
}
