{
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": "..",
    "declaration": true,

    "allowJs": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "strict": true,

    "module": "commonjs",
    "target": "es5",
    "lib": [ "es2015", "dom" ]
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "./node_modules"
  ]
}