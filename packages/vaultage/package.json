{
    "name": "vaultage",
    "version": "0.0.0",
    "description": "Vaultage backend server",
    "main": "dist/src/main.js",
    "types": "dist/src/main.d.ts",
    "scripts": {
        "build": "tsc",
        "clean": "rimraf dist/",
        "lint": "tslint -p .",
        "start": "cross-env NODE_PATH=.. node dist/src/main.js",
        "test": "npm run lint && cross-env NODE_PATH=.. jest",
        "watch": "cross-env NODE_PATH=.. jest --watch"
    },
    "bin": {
        "vaultage-server": "./bin/vaultage.js"
    },
    "contributors": [
        "Ludovic Barman <ludovic.barman@protonmail.com> (https://lbarman.ch/)",
        "Hadrien Milano <hadrien.milano@gmail.com> (https://hmil.fr)"
    ],
    "license": "GPL-2.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/vaultage-pm/vaultage"
    },
    "dependencies": {
        "body-parser": "^1.19.0",
        "class-validator": "^0.10.2",
        "commander": "^3.0.2",
        "cors": "^2.8.5",
        "express": "^4.17.1",
        "reflect-metadata": "^0.1.13",
        "routing-controllers": "^0.7.7",
        "tslib": "^1.10.0",
        "typedi": "^0.8.0"
    },
    "files": [
        "dist/src",
        "bin"
    ],
    "devDependencies": {
        "@types/express": "4.17.1",
        "@types/jest": "24.0.19",
        "@types/node": "12.7.12",
        "@types/puppeteer": "1.20.2",
        "cross-env": "6.0.3",
        "jest": "24.9.0",
        "puppeteer": "1.20.0",
        "supertest": "4.0.2",
        "ts-jest": "24.1.0",
        "ts-node": "8.4.1",
        "tslint": "5.20.0",
        "typescript": "3.6.4"
    },
    "jest": {
        "transform": {
            ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
        },
        "testRegex": "(/__tests__/.*|\\.(test|spec))\\.ts$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "json"
        ],
        "coveragePathIgnorePatterns": [
            "/node_modules/",
            "/test/"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 50,
                "functions": 100,
                "lines": 100,
                "statements": 100
            }
        },
        "clearMocks": true,
        "collectCoverage": true
    }
}
