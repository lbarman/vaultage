{
    "name": "vaultage",
    "version": "0.0.0",
    "description": "Vaultage backend server",
    "main": "dist/src/main.js",
    "types": "dist/src/main.d.ts",
    "scripts": {
        "build": "tsc",
        "clean": "rimraf dist/",
        "lint": "tslint -p .",
        "start": "cross-env NODE_PATH=.. node dist/src/main.js",
        "test": "npm run lint && cross-env NODE_PATH=.. jest",
        "watch": "cross-env NODE_PATH=.. jest --watch"
    },
    "bin": {
        "vaultage-server": "./bin/vaultage.js"
    },
    "contributors": [
        "Ludovic Barman <ludovic.barman@protonmail.com> (https://lbarman.ch/)",
        "Hadrien Milano <hadrien.milano@gmail.com> (https://hmil.fr)"
    ],
    "license": "GPL-2.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/lbarman/vaultage"
    },
    "dependencies": {
        "body-parser": "^1.18.3",
        "class-validator": "^0.8.5",
        "commander": "^2.15.1",
        "cors": "^2.8.4",
        "express": "^4.16.3",
        "reflect-metadata": "^0.1.12",
        "routing-controllers": "^0.7.7",
        "tslib": "^1.9.1",
        "typedi": "^0.7.3"
    },
    "files": [
        "dist/src",
        "bin"
    ],
    "devDependencies": {
        "@types/express": "^4.11.1",
        "@types/jest": "^22.2.3",
        "@types/node": "^10.0.9",
        "@types/puppeteer": "^1.3.2",
        "cross-env": "^5.1.5",
        "jest": "^22.4.3",
        "puppeteer": "^1.4.0",
        "supertest": "^3.1.0",
        "ts-jest": "^22.4.6",
        "ts-node": "^6.0.3",
        "tslint": "^5.10.0",
        "typescript": "^2.8.3"
    },
    "jest": {
        "transform": {
            ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
        },
        "testRegex": "(/__tests__/.*|\\.(test|spec))\\.ts$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "json"
        ],
        "coveragePathIgnorePatterns": [
            "/node_modules/",
            "/test/"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 50,
                "functions": 100,
                "lines": 100,
                "statements": 100
            }
        },
        "clearMocks": true,
        "collectCoverage": true
    }
}