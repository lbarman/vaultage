{
    "name": "vaultage",
    "version": "0.0.0",
    "description": "Vaultage backend server",
    "main": "dist/src/main.js",
    "types": "dist/src/main.d.ts",
    "scripts": {
        "build": "tsc",
        "clean": "rimraf dist/",
        "lint": "tslint -p .",
        "start": "cross-env NODE_PATH=.. node dist/src/main.js",
        "test": "npm run lint && cross-env NODE_PATH=.. jest",
        "watch": "cross-env NODE_PATH=.. jest --watch"
    },
    "bin": {
        "vaultage-server": "./bin/vaultage.js"
    },
    "contributors": [
        "Ludovic Barman <ludovic.barman@protonmail.com> (https://lbarman.ch/)",
        "Hadrien Milano <hadrien.milano@gmail.com> (https://hmil.fr)"
    ],
    "license": "GPL-2.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/lbarman/vaultage"
    },
    "dependencies": {
        "body-parser": "^1.18.2",
        "class-validator": "^0.8.1",
        "cors": "^2.8.4",
        "express": "^4.16.2",
        "reflect-metadata": "^0.1.10",
        "routing-controllers": "^0.7.6",
        "tslib": "^1.9.0",
        "typedi": "^0.6.1"
    },
    "files": [
        "dist/src",
        "bin"
    ],
    "devDependencies": {
        "@types/express": "^4.0.38",
        "@types/jest": "^22.1.2",
        "@types/node": "^9.4.6",
        "cross-env": "^5.1.1",
        "jest": "^22.3.0",
        "supertest": "^3.0.0",
        "ts-jest": "^22.0.4",
        "ts-node": "^4.1.0",
        "tslint": "^5.8.0",
        "typescript": "^2.7.2"
    },
    "jest": {
        "transform": {
            ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
        },
        "testRegex": "(/__tests__/.*|\\.(test|spec))\\.ts$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ],
        "coveragePathIgnorePatterns": [
            "/node_modules/",
            "/test/"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 50,
                "functions": 100,
                "lines": 100,
                "statements": 100
            }
        },
        "clearMocks": true,
        "collectCoverage": true,
        "mapCoverage": true
    }
}