{
    "name": "vaultage",
    "version": "0.0.0",
    "description": "Vaultage backend server",
    "main": "dist/src/main.js",
    "types": "dist/src/main.d.ts",
    "scripts": {
        "build": "tsc",
        "clean": "rimraf dist/",
        "lint": "tslint -p .",
        "start": "cross-env NODE_PATH=.. node dist/src/main.js",
        "test": "npm run lint && cross-env NODE_PATH=.. jest",
        "watch": "cross-env NODE_PATH=.. jest --watch"
    },
    "bin": {
        "vaultage-server": "./bin/vaultage.js"
    },
    "contributors": [
        "Ludovic Barman <ludovic.barman@protonmail.com> (https://lbarman.ch/)",
        "Hadrien Milano <hadrien.milano@gmail.com> (https://hmil.fr)"
    ],
    "license": "GPL-2.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/vaultage-pm/vaultage"
    },
    "dependencies": {
        "body-parser": "^1.19.0",
        "class-transformer": "^0.2.3",
        "class-validator": "^0.11.0",
        "commander": "^4.1.1",
        "cors": "^2.8.5",
        "express": "^4.17.1",
        "reflect-metadata": "^0.1.13",
        "routing-controllers": "^0.8.0",
        "tslib": "^1.11.1",
        "typedi": "^0.8.0"
    },
    "files": [
        "dist/src",
        "bin"
    ],
    "devDependencies": {
        "@types/express": "4.17.3",
        "@types/jest": "25.1.4",
        "@types/node": "13.9.0",
        "@types/puppeteer": "2.0.1",
        "cross-env": "7.0.2",
        "jest": "25.1.0",
        "puppeteer": "2.1.1",
        "supertest": "4.0.2",
        "ts-jest": "25.2.1",
        "ts-node": "8.6.2",
        "tslint": "6.0.0",
        "typescript": "3.8.3"
    },
    "jest": {
        "transform": {
            ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
        },
        "testRegex": "(/__tests__/.*|\\.(test|spec))\\.ts$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "json"
        ],
        "coveragePathIgnorePatterns": [
            "/node_modules/",
            "/test/"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 50,
                "functions": 100,
                "lines": 100,
                "statements": 100
            }
        },
        "clearMocks": true,
        "collectCoverage": true
    }
}