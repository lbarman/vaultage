{
  "name": "vaultage-api",
  "version": "0.0.0",
  "description": "Vaultage backend server",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist/",
    "lint": "tslint -p .",
    "start": "cross-env NODE_PATH=.. ts-node src/main.ts",
    "test:prod": "npm run lint && npm run test",
    "test": "jest",
    "watch": "jest --watch"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.18.2",
    "class-validator": "^0.7.3",
    "reflect-metadata": "^0.1.10",
    "routing-controllers": "^0.7.6",
    "typedi": "^0.5.2"
  },
  "devDependencies": {
    "@types/express": "^4.0.38",
    "@types/jest": "^21.1.5",
    "@types/node": "^8.0.47",
    "cors": "^2.8.4",
    "cross-env": "^5.1.1",
    "express": "^4.16.2",
    "jest": "^21.2.1",
    "supertest": "^3.0.0",
    "ts-jest": "^21.1.3",
    "ts-node": "^3.3.0",
    "tslint": "^5.8.0",
    "typescript": "^2.5.3"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "clearMocks": true,
    "collectCoverage": true,
    "mapCoverage": true
  }
}
