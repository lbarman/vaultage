{
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": "..",
    "declaration": true,
    "sourceMap": true,
    
    "allowJs": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "strictPropertyInitialization": false,
    
    "module": "commonjs",
    "target": "es5",
    "lib": [ "es2015" ]
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}